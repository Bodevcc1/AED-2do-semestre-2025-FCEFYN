pair<float, float> maxmin(vector<double>val){
    double min=999999,max=-9999999;
    
    if (val.empty()) {
        return {0.0, 0.0};
    }
    
    for(int i=0;i<val.size();i++){
        if (val[i] <= min){
            min = val[i];
        }else if(val[i] >= max){
            max = val[i];
        }
    }
    
    return {max, min};
}*/

/*Funciones Ej1:float sumavect(vector<float>nashe){
    float sum=0;
    
    for(int i=0;i<nashe.size();i++){
     sum +=nashe[i];
    }
  
  return sum;
}

float promvect(vector<float>promo){
    float prom=0;
    
    for(int i=0;i<promo.size();i++){
     prom +=promo[i];
    }
    
    return prom/promo.size();
}*/

